def merge_dicts(x, y):
    z = x.copy()
    z.update(y)
    return z

custom_unittest(
  name = 'wdt_network_script_open_during_disc',
  command = [
      "wdt/test/wdt_network_test.sh",
      "-p", "25800",
  ],
  type = 'simple',
  deps = [
      ':wdt',
  ],
  tags = ['disabled'],
  env = merge_dicts(wdt_env,
                    {"EXTRA_WDT_OPTIONS" : "-open_files_during_discovery=750"}),
)

